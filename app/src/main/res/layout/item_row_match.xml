<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_box"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:gravity="right|center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/itembg">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:padding="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_home"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="16dp"
                        tools:src="@drawable/Argentina"/>
                    <TextView
                        android:id="@+id/tv_name_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        tools:text="Argentina"/>
                    <TextView
                        android:id="@+id/tv_score_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="right|center_vertical"
                        android:textColor="@color/light_white"
                        tools:text="10"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_away"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:maxWidth="40dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="16dp"
                        tools:src="@drawable/Indonesia"/>
                    <TextView
                        android:id="@+id/tv_name_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        tools:text="Indonesia"/>
                    <TextView
                        android:id="@+id/tv_score_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="right|center_vertical"
                        android:textColor="@color/light_white"
                        tools:text="9"/>

                </TableRow>
            </TableLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_match_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                tools:text="FT"/>
            <TextView
                android:id="@+id/tv_date_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                tools:text="20/06/22"/>

        </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>