<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/itembg">

            <TextView
                android:id="@+id/tv_detail_event_name_and_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:text="World Cup 2026 - 22/06/26"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_detail_home"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:paddingHorizontal="8dp"
                        tools:src="@drawable/Indonesia"/>

                    <TextView
                        android:id="@+id/tv_detail_score_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        tools:text="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/tv_detail_score_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        tools:text="0"/>

                    <ImageView
                        android:id="@+id/img_detail_away"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:paddingHorizontal="8dp"
                        tools:src="@drawable/Argentina"/>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_detail_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    tools:text="Indonesia"/>

                <TextView
                    android:id="@+id/tv_detail_away"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    tools:text="Argentina"/>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_goal_home"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="12sp"
                        android:gravity="left"
                        tools:text="Witan 7'"/>

                    <ImageView
                        android:layout_width="3dp"
                        android:maxWidth="3dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:paddingHorizontal="8dp"
                        android:gravity="center"
                        tools:src="@drawable/soccerball"/>


                    <TextView
                        android:id="@+id/tv_goal_away"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="12sp"
                        android:gravity="right"
                        tools:text="Witan 6' 8'\n Egy 5'\n Ricky Kambuaya '45"/>

                </TableRow>
            </TableLayout>



        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/itembg">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="8dp">

                    <ImageView
                        android:id="@+id/img_detail_home_stats"
                        android:layout_width="50dp"
                        android:layout_height="61dp"
                        android:adjustViewBounds="true"
                        android:gravity="left"
                        android:paddingHorizontal="8dp"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/Indonesia" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="TEAM STATS"/>

                    <ImageView
                        android:id="@+id/img_detail_away_stats"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:paddingHorizontal="8dp"
                        android:gravity="right"
                        tools:src="@drawable/Argentina" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tv_shot_home"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        tools:text="10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Shots"/>

                    <TextView
                        android:id="@+id/tv_shot_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="11"/>


                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tv_shot_on_target_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="7"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Shots On Target"/>

                    <TextView
                        android:id="@+id/tv_shot_on_target_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="11"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tv_possesion_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="51%"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Possesion"/>

                    <TextView
                        android:id="@+id/tv_possesion_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="49%"/>


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tv_yellow_card_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Yellow Card"/>

                    <TextView
                        android:id="@+id/tv_yellow_card_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="2"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tv_red_card_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Red Card"/>

                    <TextView
                        android:id="@+id/tv_red_card_away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="0"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>